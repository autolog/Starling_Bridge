    <!-- Starling Hub -->
    <Device id="starlingHub"  type="custom" subType="indigo.kDeviceSubType.Other,ui=Hub">
        <Name>Starling Hub</Name>
        <ConfigUI>
            <Template file="Templates/template_starling_hub.xml" />
		</ConfigUI>
        <States>
            <State id="api_version">
                <ValueType>Number</ValueType>
                <TriggerLabel>API Version changed</TriggerLabel>
                <ControlPageLabel>API Version</ControlPageLabel>
            </State>
            <State id="api_ready">
                <ValueType boolType="TrueFalse">Boolean</ValueType>
                <TriggerLabel>API Ready changed</TriggerLabel>
                <ControlPageLabel>API Ready</ControlPageLabel>
            </State>
            <State id="connected_to_nest">
                <ValueType boolType="TrueFalse">Boolean</ValueType>
                <TriggerLabel>Connected To Nest changed</TriggerLabel>
                <ControlPageLabel>Connected To Nest</ControlPageLabel>
            </State>
            <State id="app_name">
                <ValueType>String</ValueType>
                <TriggerLabel>App Name changed</TriggerLabel>
                <ControlPageLabel>App Name</ControlPageLabel>
            </State>
            <State id="permission_read">
                <ValueType boolType="TrueFalse">Boolean</ValueType>
                <TriggerLabel>Read Permission changed</TriggerLabel>
                <ControlPageLabel>Read Permission</ControlPageLabel>
            </State>
            <State id="permission_write">
                <ValueType boolType="TrueFalse">Boolean</ValueType>
                <TriggerLabel>Write Permission changed</TriggerLabel>
                <ControlPageLabel>Write Permission</ControlPageLabel>
            </State>
            <State id="permission_camera">
                <ValueType boolType="TrueFalse">Boolean</ValueType>
                <TriggerLabel>Camera Permission changed</TriggerLabel>
                <ControlPageLabel>Camera Permission</ControlPageLabel>
            </State>
            <State id="status">
                <ValueType>String</ValueType>
                <TriggerLabel>Status changed</TriggerLabel>
                <ControlPageLabel>Status</ControlPageLabel>
            </State>
            <State id="status_message">
                <ValueType>String</ValueType>
                <TriggerLabel>Status changed</TriggerLabel>
                <ControlPageLabel>Status</ControlPageLabel>
            </State>
        </States>
        <UiDisplayStateId>status</UiDisplayStateId>
	</Device>

